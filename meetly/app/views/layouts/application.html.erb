<!DOCTYPE html>
<html>
  <head>
    <title>MeetlyDemo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.9.0/css/all.min.css" integrity="sha256-UzFD2WYH2U1dQpKDjjZK72VtPeWP50NoJjd26rnAdUI=" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification">
        <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="notification ">
        <p class="alert"><%= alert %></p>
      </div>
    <% end %>

    <nav class="navbar-expand-md navbar-light bg-light border">

      <div class="collapse navbar-collapse" id="navbar">
      <strong class="navbar-brand"  style="font-family: 'Scheherazade New', serif;", href="/">Meetly</strong>
      <button aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation" class="navbar-toggler" data-target="#navbar" data-toggle="collapse" type="button">
        <span class="navbar-toggler-icon"></span>
      </button>
        <% if user_signed_in? %>
          <ul class="navbar-nav ml-auto mt-2">
            <li class="nav-item"><strong class="nav-link"><%= link_to "Meet", root_path %></strong></li>
            <li class="nav-item"><strong class="nav-link"><%= link_to "Post", new_post_path %></strong></li>
            <li class="nav-item"><strong class="nav-link"><%= link_to "My page", user_path(current_user) %></strong></li>
            <li class="nav-item"><strong class="nav-link"><%= link_to "Settings", edit_user_path(current_user) %></strong></li>
            <li class="nav-item"><strong class="nav-link"><%= link_to "Log out", destroy_user_session_path, method: :delete %></strong></li>
          </ul>
        <% else %>
          <ul class="navbar-nav ml-auto mt-2">
            <% if current_page?(new_user_session_path) %>
              <li class="nav-item"><a class="nav-link"><%= link_to "Sign up", new_user_registration_path %></a></li>
            <% else %>
              <li class="nav-item"><a class="nav-link"><%= link_to "Sign in", new_user_session_path %></a></li>
            <% end %>
        <% end %>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
